<div class="icondiv" id="<%= user.id %>">
  <% if current_user && user != current_user %>
    <% if !current_user.likes?(user) %>
      <%= link_to favorite_users_path(user_id: user.id), method: :post, remote: true do %>
        <%= icon(current_user.likes?(user) ? "fas" : "far", "heart", :style => 'font-size: 1.5em; color: #FAA916;') %>
      <% end %>
    <% else %>
      <%= link_to favorite_user_path(id: user.id, user_id: user.id), method: :delete, remote: true do %>
        <%= icon(current_user.likes?(user) ? "fas" : "far", "heart", :style => 'font-size: 1.5em; color: #FAA916;') %>
      <% end %>
    <% end %>
  <% end %>
</div>
