<div class="banner pt-0" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= banner_or_fallback(@user)%>')">
  <div class="icondiv" id="<%= @user.id %>">
    <% if current_user %>
      <%= icon(current_user.likes?(@user) ? "fas" : "far" , "heart m-3", :style => 'font-size: 1.5em; color: red;') %>
    <% end %>
  </div>
  <div class="py-5">
  </div>
  <div class="container" >
    <% if @user == current_user %>
      <a class="btn profile" href="#">Dancing with myself</a>
    <% else %>
      <a class="btn profile" href="#">Jam with <%= @user.first_name %></a>
    <% end %>
  </div>
</div>
