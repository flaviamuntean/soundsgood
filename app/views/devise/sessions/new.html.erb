<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12">

      <div class="form-auth">
        <h2>Welcome back!</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" },
                        placeholder: "john@soundsgood.com", class: "cream" %>
            <%= f.input :password,
                        required: true,
                        input_html: { autocomplete: "current-password" },
                        placeholder: raw("&bull;" * 8), class: "cream" %>
            <p class="forgot-password"> <%= render "devise/shared/forgot_password" %></p>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn-form mt-2" %>
          </div>
        <% end %>

        <p>Don't have an account yet? <%= render "devise/shared/links" %> </p>
      </div>
    </div>
  </div>
</div>

