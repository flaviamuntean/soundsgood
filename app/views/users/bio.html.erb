<%= render "shared/banner" %>
<%= render "shared/profile-bar" %>

<div>
  <% if @user == @current_user%>
    <% if @user.bio.nil? %>
      <%= form_for [@user] do |f| %>
        <div class="profile-search">
          <%= f.text_field :bio, class: 'form-control', required: true, placeholder: "Whats your story??" %>
          <div class="mb-2 text-center profile-page" style="text-transform: uppercase;">
            <button class="btn btn-outline-info" type="submit">Add your bio!</button>
          </div>
        </div>
      <% end %>
    <% else %>
      <%= form_for [@user] do |f| %>
        <div class="profile-search">
          <%= f.text_field :bio, class: 'form-control', required: true, placeholder: @user.bio %>
          <div class="mb-2 text-center profile-page" style="text-transform: uppercase;">
            <button class="btn btn-outline-info" type="submit">Update your bio!</button>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
<div class="mb-2 profile-page" style="text-transform: uppercase;">
  <div>
    <h4>About <%= @user.first_name%></h4>
    <p><%= @user.bio %></p>
  </div>

  <div>
    <h4>Instruments</h4>
    <% @user.instruments.each do |instrument| %>
    <%= instrument.name.capitalize %> <%= image_tag instrument.icon, :style => "height: 30px" %>
    <% end %>
  </div>

  <div>
    <h4>Genres</h4>
    <% @user.genres.each do |genre|%>
    <%= genre.name.capitalize %>
    <% end %>
  </div>
<!-- move this div to bottom to apply css to photos -->
</div>

  <div>
    <% if @user == @current_user %>
      <div class="mb-2 text-center profile-page">
        <h4 >Photos <span style="font-size: 12px;"><button id="add-photo">âœš</button></span></h4>
      </div>
      <div id="photo-form">
        <%= simple_form_for [@user, @photo] do |f| %>
            <%= f.input :url, as: :file, label: false %>
            <%= f.input :url_cache, as: :hidden %>
            <%= f.button :submit, "Add a cool photo ðŸ“¸", class:"btn btn-outline-info" %>
        <% end %>
      </div>
      <% if !@user.photos.any? %>
        <p>No photos to show</p>
      <% else %>
        <div class="app">
          <ul class="hs full">
            <% @photos.each do |photo| %>

              <div>
                <li class="item" style="background-image: url('<%= cl_image_path photo.url %>'); height: 90%">
                </li>
              </div>
            <% end %>
          </ul>
        </div>
      <% end %>
    <% else %>
      <div class="mb-2 text-center profile-page">
        <h4><%= @user.first_name %>'s Photos</h4>
        <% if !@user.photos.any? %>
          <p>No photos to show</p>
      </div>
        <% else %>
        <div class="app">
          <ul class="hs full">
            <% @photos.each do |photo| %>
              <div>
                <li class="item" style="background-image: url('<%= cl_image_path photo.url %>'); height: 90%">
                </li>
              </div>
            <% end %>
          </ul>
        </div>
      <% end%>
    <% end %>
  </div>
