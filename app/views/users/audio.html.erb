<%= render "shared/banner" %>
<%= render "shared/profile-bar" %>

<% if current_user %>
  <% if current_user.id == @user.id %>
    <% if current_user.soundcloud_profile.nil? || current_user.soundcloud_profile == "" %>
      <div class="jumbotron pt-3 pb-1 mb-0">
        <div class="container">
          <h4>Link your Soundcloud profile to show off your talent!</h4>

            <%= form_for @user do |f| %>
              <%#= render 'shared/errors', object: @video %>
                <div class="input-group mb-3">
                  <%= f.text_field :soundcloud_profile, class: 'form-control', required: true, placeholder: "https://soundcloud.com/your-username" %>
                  <div class="input-group-append">
                    <button class="home btn btn-outline-secondary youtube" type="submit">Connect!</button>
                  </div>
                </div>
            <% end %>

        </div>
      </div>
    <% else %>
      <div class="jumbotron pt-3 pb-1 mb-0">
        <div class="container">
          <h4>You're connected to Soundcloud!</h4>
        </div>
      </div>

    <% end %>
  <% end %>
<% end %>

<% if @user.soundcloud_profile.nil? || @user.soundcloud_profile == "" %>
  <div class="container">
    <div class="mt-5">
      <div>
      <h1 class="no-song"> <%= @user.first_name %> hasn't uploaded any songs...</h1>
      </div>
    </div>
    <div>
      <% if @user.videos.any? %>
        <div class="mt-4">
          <h3 class="but-text">But you can check out <%= @user.first_name %>'s videos and influences: </h3>
        </div>
        <div class=" mt-4 d-flex justify-content-around">
          <div class="btn btn-outline-info"><%= link_to "Videos", user_path, class: "audio_links" %></div>
          <div class="btn btn-outline-info"><%= link_to "Influences", influences_user_path, class: "audio_links"%></div>
        </div>
      <% else %>
          <h3 class=" mt-4 but-text">But you can check out <%= @user.first_name %>'s influences:</h3>
          <div class="mt-4 d-flex justify-content-around">
            <div class="btn btn-outline-info"><%= link_to "Influences", influences_user_path, class: "audio_links" %></div>
          </div>
      <% end %>
    </div>
  </div>
<% else %>
  <% @ids.each do |id| %>
    <div class="container">
      <div class="mt-4">
        <iframe width="100%" height="110" scrolling="no" frameborder="no" allow="autoplay" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/<%= id %>&color=%23faa916&auto_play=false&hide_related=true&show_comments=false&show_user=true&show_reposts=false&show_teaser=false&show_artwork=false&buying=false&sharing=false&show_playcount=false"></iframe>
      </div>
    </div>
  <% end %>
<% end %>

