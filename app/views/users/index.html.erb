<form class="form-inline d-flex justify-content-center form-sm mt-0">
    <input class="form-control form-control-sm w-75" type="text" placeholder="Instruments, genres, artists..."
      aria-label="Search" name="query">
      <i class="fas fa-map-marker-alt pl-2 ml-1 navigator" style="opacity:0.4; font-size: 20px;"></i>
</form>

<% @users.each do |user| %>
    <%= link_to user_path(user) do %>
        <div class="card my-4" style= "border: none;">
            <!-- Card image -->
            <% if !user.videos.empty? %>
              <iframe id="ytplayer" height="230px" type="text/html" src="https://www.youtube.com/embed/<%= user.videos.first.uid %>?modestbranding=1&controls=0" frameborder="0"></iframe>
            <% else %>
              <%= cl_image_tag photo_or_fallback(user), class:  "card-img-top shadow bg-white rounded", :style => "object-fit: cover; height: 230px;" %>
            <% end %>

            <!-- Card content -->
                <div class="card-body py-2 px-3 d-flex justify-content-between">
                    <div class="d-flex flex-column">
                        <!-- Title -->
                        <h4 class="card-title mb-0 h5 text-body"><%= user.first_name %></h4>
                        <!-- Text -->
                        <% if !user.genres.empty? %>
                          <p class="card-text text-body"><%= user.genres.first.name %></p>
                        <% end %>
                    </div>
                    <div class="d-flex flex-column justify-content-between">
                        <% if current_user %>
                          <% if current_user.address %>
                            <% distance = current_user.distance_to(user.address).round(1) %>
                            <p class= "mb-0 text-right text-muted h6 mb-1"><%= distance %> km</p>
                            <% end %>
                          <% else %>
                            <p class= "mb-0 text-right text-muted h6 mb-1"></p>
                          <% end %>
                        <div>
                            <% user.instruments[0..2].each do |instrument| %>
                            <%= image_tag instrument.icon, :style => "height: 30px" %>
                            <% end %>
                        </div>
                    </div>
                </div>
        </div>
    <% end %>
<% end %>
