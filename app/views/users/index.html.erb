<form class="form-inline d-flex justify-content-center form-sm mt-0">
    <input class="form-control form-control-sm w-75" type="text" placeholder="Instrument, Genre, Artists.."
      aria-label="Search">
      <i class="fas fa-map-marker-alt ml-2"></i>  
</form>
<% @users.each do |user| %>
    <div class="card m-4" style= "border: none;">
        <!-- Card image -->
        <%= image_tag "tiago.jpg", :class => "card-img-top shadow bg-white rounded", :style => "object-fit: cover; height: 200px;" %>
        <!-- Card content -->
        <a href="#">
            <div class="card-body py-2 px-1 d-flex justify-content-between">
                <div class="d-flex flex-column">
                    <!-- Title -->
                    <h4 class="card-title mb-0 h5 text-body"><%= user.first_name %>, user.age </h4>
                    <!-- Text -->
                    <p class="card-text text-body">user.genres.all[0..3]</p>
                    <!-- Button -->
                </div>
                <div class="d-flex flex-column justify-content-between">
                    <p class= "mb-0 text-right text-muted h6 mb-1">1.5km</p>
                    <div>
                    <%= image_tag "instruments/Guitar Classical.svg", :style => "height: 30px" %>
                    <%= image_tag "instruments/Drums.svg", :style => "height: 30px" %>
                    </div>
                </div>
            </div>
        </a>
    </div>
<% end %>
